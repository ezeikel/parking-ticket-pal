# Database
DATABASE_URL="postgresql://user:password@localhost:5432/parking_ticket_pal"
DATABASE_URL_UNPOOLED="postgresql://user:password@localhost:5432/parking_ticket_pal"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXT_AUTH_SECRET="your-secret-key-here"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook Apps
# Business App (for API/social posting)
FACEBOOK_BUSINESS_APP_ID="your-facebook-business-app-id"
FACEBOOK_BUSINESS_APP_SECRET="your-facebook-business-app-secret"

# Consumer App (for user authentication)
FACEBOOK_CONSUMER_APP_ID="your-facebook-consumer-app-id"
FACEBOOK_CONSUMER_APP_SECRET="your-facebook-consumer-app-secret"

# Apple OAuth
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# Email Configuration
# Production: Use Resend
RESEND_API_KEY="your-resend-api-key"
DEFAULT_FROM_EMAIL="no-reply@.notifications.parkingticketpal.com"

# Development: Use Mailtrap (optional, fallback to Resend if not set)
MAILTRAP_HOST="smtp.mailtrap.io"
MAILTRAP_PORT="2525"
MAILTRAP_USER="your-mailtrap-user"
MAILTRAP_PASS="your-mailtrap-password"

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Sentry
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Stripe Price IDs - One-Time Purchases (per ticket)
NEXT_PUBLIC_STRIPE_PRICE_ONE_TIME_STANDARD="price_xxx_standard_one_time"
NEXT_PUBLIC_STRIPE_PRICE_ONE_TIME_PREMIUM="price_xxx_premium_one_time"

# Stripe Price IDs - Consumer Subscriptions (Standard - up to 5 tickets/month)
NEXT_PUBLIC_STRIPE_PRICE_SUBSCRIPTION_STANDARD_MONTHLY="price_xxx_standard_monthly"
NEXT_PUBLIC_STRIPE_PRICE_SUBSCRIPTION_STANDARD_YEARLY="price_xxx_standard_yearly"

# Stripe Price IDs - Consumer Subscriptions (Premium - up to 10 tickets/month)
NEXT_PUBLIC_STRIPE_PRICE_SUBSCRIPTION_PREMIUM_MONTHLY="price_xxx_premium_monthly"
NEXT_PUBLIC_STRIPE_PRICE_SUBSCRIPTION_PREMIUM_YEARLY="price_xxx_premium_yearly"

# Stripe Price IDs - Fleet Plans (Starter - up to 50 tickets/month)
NEXT_PUBLIC_STRIPE_PRICE_FLEET_STARTER_MONTHLY="price_xxx_fleet_starter_monthly"
NEXT_PUBLIC_STRIPE_PRICE_FLEET_STARTER_YEARLY="price_xxx_fleet_starter_yearly"

# Stripe Price IDs - Fleet Plans (Pro - up to 200 tickets/month)
NEXT_PUBLIC_STRIPE_PRICE_FLEET_PRO_MONTHLY="price_xxx_fleet_pro_monthly"
NEXT_PUBLIC_STRIPE_PRICE_FLEET_PRO_YEARLY="price_xxx_fleet_pro_yearly"

# Note: Fleet Enterprise is custom pricing and doesn't have fixed price IDs

# OpenAI (for AI features)
OPENAI_API_KEY="your-openai-api-key"

# Google AI (for Gemini models - AI Judge, image evaluation)
# Get from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key"

# Social Media Configuration
# Facebook/Instagram Business Posting
FACEBOOK_PAGE_ID="your-facebook-page-id"
FACEBOOK_PAGE_ACCESS_TOKEN="your-facebook-page-access-token"
INSTAGRAM_ACCOUNT_ID="your-instagram-business-account-id"

# LinkedIn
LINKEDIN_ACCESS_TOKEN="your-linkedin-access-token"

# Automation Settings
# Set to 'true' to run automations in dry-run mode (fill forms but don't submit)
AUTOMATION_DRY_RUN="false"

# Worker Service (Hetzner automation worker)
WORKER_URL="https://your-worker-url"
WORKER_SECRET="your-worker-secret"